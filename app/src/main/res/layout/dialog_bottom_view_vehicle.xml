<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/solid_background">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sugestões de veículos"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size6" />

        <TextView
            android:id="@+id/moreOptions_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="end"
            android:text="Ver mais opções"
            android:textColor="@color/colorPrimary"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/typeVehicles_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:overScrollMode="never"
            tools:listitem="@layout/adapter_typevehicles"
            tools:itemCount="2"/>

        <View
            style="@style/Divider.Horizontal"
            android:layout_weight="0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/paymentMethods_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Método de pagamento"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size5"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                app:drawableTint="@color/colorPrimaryDark"
                app:drawableEndCompat="@drawable/ic_arrow_next" />

            <LinearLayout
                android:id="@+id/paymentContainer_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/paymentType_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinheiro"
                    android:textColor="@color/gray700"
                    android:drawablePadding="8dp"/>

                <ImageView
                    android:id="@+id/paymentType_iv"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="4dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_money"
                    app:tint="@color/green500"/>

            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/next_bt"
            style="@style/StyleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Avançar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>