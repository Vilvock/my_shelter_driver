<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true"
    tools:context=".ui.fragment.auth.SignUpFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="Cadastre-se"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size17"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/main_logo" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Dados"
                android:textAllCaps="true"
                android:textColor="@color/gray100"
                android:visibility="visible" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_main_spinner">

                <Spinner
                    android:id="@+id/gender_sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/type_genre"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_main_et"
                    android:ems="10"
                    android:hint="Nome"
                    android:maxLines="1" />


                <EditText
                    android:id="@+id/lastName_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_main_et"
                    android:ems="10"
                    android:hint="Sobrenome"
                    android:maxLines="1" />


            </LinearLayout>

            <com.santalu.maskedittext.MaskEditText
                android:id="@+id/birth_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@drawable/shape_main_et"
                android:ems="10"
                android:hint="Data de nascimento"
                android:inputType="number"
                android:maxLines="1"
                app:met_mask="##/##/####" />

            <EditText
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_main_et"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

            <com.santalu.maskedittext.MaskEditText
                android:id="@+id/cellphone_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@drawable/shape_main_et"
                android:ems="10"
                android:hint="Celular"
                android:inputType="number"
                android:maxLines="1"
                app:met_mask="(##) #####-####" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_main_spinner">

                <Spinner
                    android:id="@+id/typePerson_sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/type_person"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp" />

            </FrameLayout>


            <EditText
                android:id="@+id/document_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_main_et"
                android:ems="10"
                android:hint="Documento"
                android:inputType="number"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Senha"
                android:textAllCaps="true"
                android:textColor="@color/gray100"
                android:visibility="visible" />

            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_main_et"
                android:ems="10"
                android:hint="Digite sua Senha"
                android:inputType="textPassword"
                android:maxLines="1" />

            <EditText
                android:id="@+id/coPassword_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_main_et"
                android:ems="10"
                android:hint="Confirmar Senha"
                android:inputType="textPassword"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Veículo"
                android:textAllCaps="true"
                android:textColor="@color/gray100"
                android:visibility="visible" />

            <EditText
                android:id="@+id/mark_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_main_et"
                android:ems="10"
                android:hint="Marca"
                android:inputType="text"
                android:maxLines="1" />

            <EditText
                android:id="@+id/model_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_main_et"
                android:ems="10"
                android:hint="Modelo"
                android:inputType="text"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/board_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_main_et"
                android:ems="10"
                android:hint="Placa"
                android:inputType="text"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/year_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_main_et"
                    android:ems="10"
                    android:hint="Ano"
                    android:inputType="number"
                    android:maxLines="1"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_main_spinner">

                    <Spinner
                        android:id="@+id/colorCar_sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/type_carColor"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp" />

                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_main_spinner">

                <Spinner
                    android:id="@+id/typeCar_sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp" />

            </FrameLayout>

            <TextView
                android:id="@+id/terms_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/terms_conditions"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/next_bt"
                style="@style/StyleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="Avançar" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>