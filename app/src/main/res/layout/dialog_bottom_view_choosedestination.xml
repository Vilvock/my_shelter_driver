<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/solid_background">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para onde deseja ir?"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Por favor insira um destino e nós buscaremos por motoristas disponíveis."
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/destination_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:maxLines="1"
                android:hint="Destino"
                android:background="@drawable/shape_main_stroke_gray_et"
                android:ems="10"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:drawableEnd="@drawable/ic_search"
                android:paddingEnd="16dp"/>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>