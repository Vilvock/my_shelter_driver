<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/solid_background">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Como foi sua viagem? \nPor favor, avalie seu motorista."
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="@dimen/text_size6" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/driverAvatar_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="@style/roundedImageViewRounded"
                app:srcCompat="@android:drawable/sym_def_app_icon" />


            <TextView
                android:id="@+id/driverName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:background="@drawable/shape_rounded_textview"
                android:text="nome do motora"
                android:textSize="@dimen/text_size5"
                android:textAllCaps="false"/>


        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:numStars="5"
            />

        <EditText
            android:id="@+id/driverComment_et"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shape_main_stroke_gray_et"
            android:layout_margin="8dp"
            android:gravity="top"
            android:inputType="text"
            android:padding="16dp"
            android:hint="Deixe um comentÃ¡rio..."
            android:textColor="#8000204a"
            android:textSize="12sp" />

        <Button
            android:id="@+id/favoriteDriver_bt"
            style="@style/StyleButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Favoritar motorista" />

        <Button
            android:id="@+id/rateDriver_bt"
            style="@style/StyleButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Avaliar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>