<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    tools:context=".fragment.home.UpdateFavoritePlaceFragment" >

    <Button
        android:id="@+id/button19"
        style="@style/StyleButtonMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="34dp"
        android:text="Salvar Local"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:paddingBottom="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/name_et3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_main_et"
            android:ellipsize="end"
            android:ems="10"
            android:fontFamily="@font/sf_ui_display_bold"
            android:hint="Nome"
            android:maxLines="1"
            android:text="Av. João Wallig - Passo d'Areia, Porto Alegre - RS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/sf_ui_display_bold"
            android:text="Endereço do Local"
            android:textAllCaps="true"
            android:textColor="@color/colorSubTitle"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_et2" />

        <EditText
            android:id="@+id/name_et2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_main_et"
            android:ellipsize="end"
            android:ems="10"
            android:fontFamily="@font/sf_ui_display_bold"
            android:hint="Nome"
            android:maxLines="1"
            android:text="McDonald's"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <Button
            android:id="@+id/button8"
            style="@style/StyleTextButtonIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/sf_ui_display_light"
            android:padding="10dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Outro"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:icon="@drawable/ic_point_locale"
            app:iconPadding="6dp"
            app:iconSize="18dp"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button16"
            style="@style/StyleTextButtonIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="21dp"
            android:fontFamily="@font/sf_ui_display_light"
            android:padding="10dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Trabalho"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:icon="@drawable/ic_work"
            app:iconPadding="6dp"
            app:iconSize="18dp"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/button8"
            app:layout_constraintStart_toEndOf="@+id/button17"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button17"
            style="@style/StyleTextButtonIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/sf_ui_display_light"
            android:padding="10dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="casa"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:icon="@drawable/ic_home"
            app:iconPadding="6dp"
            app:iconSize="18dp"
            app:iconTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/sf_ui_display_bold"
            android:text="Nome do local"
            android:textAllCaps="true"
            android:textColor="@color/colorSubTitle"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button17" />

        <Button
            android:id="@+id/button18"
            style="@style/StyleButtonIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Apontar No Mapa"
            android:textAllCaps="true"
            app:icon="@drawable/ic_open_map"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_et3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>