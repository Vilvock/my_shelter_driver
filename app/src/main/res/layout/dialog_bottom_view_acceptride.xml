<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/solid_background">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nós achamos um motorista para você"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="O motorista chegará até você em 00:00"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/phone_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/shape_round_imagebutton"
                    android:padding="16dp"
                    app:srcCompat="@drawable/ic_phone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/driverAvatar_iv"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        style="@style/roundedImageViewRounded"
                        app:srcCompat="@android:drawable/sym_def_app_icon" />

                    <TextView
                        android:id="@+id/driverName_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:background="@drawable/shape_rounded_textview"
                        android:text="nome do motora"
                        android:textSize="@dimen/text_size5"
                        android:textAllCaps="false"/>


                </LinearLayout>

                <ImageButton
                    android:id="@+id/chat_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/shape_round_imagebutton"
                    android:padding="16dp"
                    app:srcCompat="@drawable/ic_chat" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Motora"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="@dimen/text_size6"
                android:visibility="gone"
                android:textColor="@color/colorPrimaryDark" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:focusable="false"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4"
                style="?android:attr/ratingBarStyleIndicator"
                android:scaleX=".5"
                android:scaleY=".5"
                />

            <TextView
                android:id="@+id/infoCar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000000 - DFSADFSA" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>