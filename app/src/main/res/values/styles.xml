<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="GeneralNoTitle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray500</item>
        <item name="android:textSize">@dimen/text_size4</item>
        <item name="fontFamily">@font/sf_ui_display_medium</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GeneralNoTitle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GeneralNoTitle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="GeneralNoTitle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="StyleButtonSmall" parent="Widget.MaterialComponents.Button">
            <item name="android:padding">10dp</item>
            <item name="android:paddingStart">15dp</item>
            <item name="android:paddingEnd">15dp</item>
            <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14dp</item>
        <item name="cornerRadius">25dp</item>
    </style>
    <style name="StyleTextButtonSmall" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14dp</item>
        <item name="cornerRadius">25dp</item>
    </style>
    <style name="StyleButtonMedium" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="StyleTextButtonMedium" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
        <item name="strokeWidth">0.9dp</item>

    </style>





</resources>
